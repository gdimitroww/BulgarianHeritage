<body>
    <div class="container auth-page-body" style="min-height: 100vh !important; display: flex !important; align-items: center !important; padding: 2rem 0 !important; background: transparent !important; z-index: 1 !important; position: relative !important;">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="auth-card-overlay auth-card-glow super-glass" style="background: rgba(40, 40, 40, 0.15) !important; padding: 3rem 2rem !important; border-radius: 20px !important; backdrop-filter: blur(25px) saturate(180%) !important; border: 1px solid rgba(255, 255, 255, 0.3) !important; box-shadow: 0 8px 32px rgba(0, 0, 0, 0.37), inset 0 1px 0 rgba(255, 255, 255, 0.1), 0 0 0 1px rgba(255, 255, 255, 0.05) !important; max-width: 750px !important; margin: 0 auto !important; position: relative !important; z-index: 2 !important;">
                    <div class="text-center mb-3">
                        <a href="/" class="btn btn-outline-light btn-sm cool-button" style="border: 1px solid rgba(255, 255, 255, 0.5) !important; color: rgba(255, 255, 255, 0.9) !important; background: rgba(255, 255, 255, 0.1) !important; backdrop-filter: blur(10px) !important; transition: all 0.3s ease !important;">
                            <i class="fas fa-home me-2"></i>Back to Home
                        </a>
                    </div>

                    <div class="text-center mb-4">
                        <h1 class="h2 fw-bold text-white floating-title" style="color: white !important; text-shadow: 0 0 30px rgba(255, 255, 255, 0.8), 0 0 60px rgba(255, 255, 255, 0.4), 0 0 90px rgba(13, 110, 253, 0.3) !important; animation: floatTitle 4s ease-in-out infinite !important;">
                            <i class="fas fa-sign-in-alt me-2" style="animation: pulseGlow 2s ease-in-out infinite !important;"></i>Login
                        </h1>
                        <p class="text-light" style="color: rgba(255, 255, 255, 0.9) !important; text-shadow: 0 0 10px rgba(255, 255, 255, 0.3) !important;">Sign in to your account.</p>
                    </div>

                    <form id="account" method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" 
                                   class="form-control cool-input" 
                                   autocomplete="new-email" 
                                   autocapitalize="off" 
                                   autocorrect="off" 
                                   spellcheck="false"
                                   aria-required="true" 
                                   placeholder="name@example.com" 
                                   style="background: rgba(255, 255, 255, 0.08) !important; border: 1px solid rgba(255, 255, 255, 0.2) !important; color: #ffffff !important; backdrop-filter: blur(10px) !important; transition: all 0.3s ease !important;" />
                            <label asp-for="Input.Email" class="text-muted" style="color: rgba(255, 255, 255, 0.7) !important; transition: all 0.3s ease !important;">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" 
                                   class="form-control cool-input" 
                                   autocomplete="new-password" 
                                   autocapitalize="off" 
                                   autocorrect="off" 
                                   spellcheck="false"
                                   aria-required="true" 
                                   placeholder="password" 
                                   style="background: rgba(255, 255, 255, 0.08) !important; border: 1px solid rgba(255, 255, 255, 0.2) !important; color: #ffffff !important; backdrop-filter: blur(10px) !important; transition: all 0.3s ease !important;" />
                            <label asp-for="Input.Password" class="text-muted" style="color: rgba(255, 255, 255, 0.7) !important; transition: all 0.3s ease !important;">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input cool-checkbox" asp-for="Input.RememberMe" style="background-color: rgba(255, 255, 255, 0.1) !important; border: 1px solid rgba(255, 255, 255, 0.3) !important; transition: all 0.3s ease !important;" />
                            <label asp-for="Input.RememberMe" class="form-check-label text-light" style="color: rgba(255, 255, 255, 0.9) !important; text-shadow: 0 0 10px rgba(255, 255, 255, 0.2) !important;">
                                Remember me
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100 mb-3 cool-button" style="background: linear-gradient(135deg, #20c997 0%, #0d6efd 50%, #6610f2 100%) !important; border: none !important; box-shadow: 0 4px 15px rgba(13, 110, 253, 0.4), 0 0 20px rgba(13, 110, 253, 0.2) !important; position: relative !important; overflow: hidden !important; font-weight: 600 !important; letter-spacing: 0.5px !important; text-transform: uppercase !important;">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </button>
                    </form>

                    <div class="text-center">
                        <p class="text-light mb-2" style="color: rgba(255, 255, 255, 0.8) !important;">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-light" style="color: rgba(255, 255, 255, 0.7) !important; text-decoration: none !important; transition: all 0.3s ease !important;">Forgot your password?</a>
                        </p>
                        <p class="text-light mb-2" style="color: rgba(255, 255, 255, 0.8) !important;">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" id="register-link" class="btn btn-outline-light cool-button" style="border: 1px solid rgba(255, 255, 255, 0.4) !important; color: rgba(255, 255, 255, 0.9) !important; background: rgba(255, 255, 255, 0.05) !important; backdrop-filter: blur(10px) !important; transition: all 0.3s ease !important; position: relative !important; overflow: hidden !important;">
                                <i class="fas fa-user-plus me-2"></i>Register as a new user
                            </a>
                        </p>
                        <p class="text-light" style="color: rgba(255, 255, 255, 0.8) !important;">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-light" style="color: rgba(255, 255, 255, 0.7) !important; text-decoration: none !important; transition: all 0.3s ease !important;">Resend email confirmation</a>
                        </p>
                    </div>

                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <hr class="border-light my-4" style="border-color: rgba(255, 255, 255, 0.2) !important;" />
                        <div class="text-center">
                            <h4 class="text-white mb-3" style="text-shadow: 0 0 20px rgba(255, 255, 255, 0.5) !important;">Use another service to log in.</h4>
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div class="d-grid gap-2">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-outline-light cool-button" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                            <i class="fab fa-@provider.Name.ToLower() me-2"></i>@provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="text-center mt-4">
                            <small class="text-light opacity-75" style="color: rgba(255, 255, 255, 0.6) !important;">
                                There are no external authentication services configured. 
                                <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="text-light" target="_blank" style="color: rgba(13, 110, 253, 0.8) !important; text-decoration: none !important; transition: all 0.3s ease !important;">
                                    See this article about setting up authentication
                                </a>.
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Floating Particles -->
    <div class="floating-particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>

    <!-- Enhanced Ethereal Shadows Background -->
    <div class="ethereal-shadows-background" style="position: fixed !important; top: 0 !important; left: 0 !important; width: 100% !important; height: 100vh !important; z-index: -1 !important; background: linear-gradient(135deg, #000000 0%, #1a1a1a 25%, #2d2d2d 50%, #404040 75%, #666666 100%) !important;">
    <div class="shadow-overlay">
        <svg class="filter-svg">
            <defs>
                <filter id="ethereal-filter">
                    <feTurbulence
                        id="turbulence"
                        result="undulation"
                        numOctaves="2"
                        baseFrequency="0.0003,0.003"
                        seed="0"
                        type="turbulence"
                    />
                    <feColorMatrix
                        id="hue-rotate"
                        in="undulation"
                        type="hueRotate"
                        values="180"
                    />
                    <feColorMatrix
                        in="dist"
                        result="circulation"
                        type="matrix"
                        values="4 0 0 0 1  4 0 0 0 1  4 0 0 0 1  1 0 0 0 0"
                    />
                    <feDisplacementMap
                        in="SourceGraphic"
                        in2="circulation"
                        scale="80"
                        result="dist"
                    />
                    <feDisplacementMap
                        in="dist"
                        in2="undulation"
                        scale="80"
                        result="output"
                    />
                </filter>
            </defs>
        </svg>
        <div class="shadow-mask"></div>
    </div>
    <div class="noise-overlay"></div>
</div>

    <!-- Bootstrap 5 JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
    <script>
        // Ethereal Shadows Animation
        document.addEventListener('DOMContentLoaded', function() {
            const hueRotateElement = document.getElementById('hue-rotate');
            const turbulenceElement = document.getElementById('turbulence');
            
            if (hueRotateElement && turbulenceElement) {
                let hueValue = 0;
                let turbulenceX = 0.0003;
                let turbulenceY = 0.003;
                
                function animateEtherealEffect() {
                    // Animate hue rotation
                    hueValue += 1;
                    if (hueValue >= 360) hueValue = 0;
                    hueRotateElement.setAttribute('values', hueValue.toString());
                    
                    // Animate turbulence frequency
                    const time = Date.now() * 0.001;
                    const newTurbulenceX = 0.0003 + Math.sin(time * 0.5) * 0.0001;
                    const newTurbulenceY = 0.003 + Math.cos(time * 0.3) * 0.001;
                    
                    turbulenceElement.setAttribute('baseFrequency', `${newTurbulenceX},${newTurbulenceY}`);
                    
                    requestAnimationFrame(animateEtherealEffect);
                }
                
                animateEtherealEffect();
            }

            // ULTIMATE FIX for white rectangle - Remove browser autofill programmatically
            function destroyAutofill() {
                // Get all input elements
                const inputs = document.querySelectorAll('input[type="email"], input[type="password"], input[type="text"]');
                
                inputs.forEach(input => {
                    // Use specific autocomplete values instead of "off"
                    if (input.type === 'email') {
                        input.setAttribute('autocomplete', 'new-email');
                    } else if (input.type === 'password') {
                        input.setAttribute('autocomplete', 'new-password');
                    }
                    
                    // Remove any datalist connections
                    input.removeAttribute('list');
                    
                    // Force clear any autofill background
                    input.style.background = 'rgba(255, 255, 255, 0.08) !important';
                    input.style.webkitBoxShadow = '0 0 0 9999px rgba(30, 30, 30, 1) inset !important';
                    input.style.webkitTextFillColor = '#ffffff !important';
                    
                    // Add event listeners to prevent autofill
                    input.addEventListener('input', function() {
                        // Force styling even after autofill
                        setTimeout(() => {
                            this.style.background = 'rgba(255, 255, 255, 0.08) !important';
                            this.style.webkitBoxShadow = '0 0 0 9999px rgba(30, 30, 30, 1) inset !important';
                            this.style.webkitTextFillColor = '#ffffff !important';
                        }, 10);
                    });
                    
                    input.addEventListener('focus', function() {
                        this.style.background = 'rgba(255, 255, 255, 0.12) !important';
                        this.style.webkitBoxShadow = '0 0 0 9999px rgba(30, 30, 30, 1) inset !important';
                        this.style.webkitTextFillColor = '#ffffff !important';
                    });
                });
                
                // Remove any existing datalist elements
                const datalists = document.querySelectorAll('datalist');
                datalists.forEach(datalist => {
                    datalist.parentNode.removeChild(datalist);
                });
            }
            
            // Run immediately and after a short delay
            destroyAutofill();
            setTimeout(destroyAutofill, 100);
            setTimeout(destroyAutofill, 500);
            setTimeout(destroyAutofill, 1000);
        });
    </script>
